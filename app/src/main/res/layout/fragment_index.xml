<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/indexView_paddingStart"
    android:paddingEnd="@dimen/indexView_paddingEnd"
    tools:context=".IndexFragment">

    <Button
        android:id="@+id/toLayoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toAnimationBtn"

        android:text="Layout"
        />

    <Button
        android:id="@+id/toAnimationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/toLayoutBtn"
        app:layout_constraintTop_toTopOf="@id/toLayoutBtn"
        app:layout_constraintEnd_toEndOf="@id/toLayoutBtn"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="Animation"
        />

</android.support.constraint.ConstraintLayout>